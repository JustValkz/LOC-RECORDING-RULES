Write-Host "Launching WinObj..." -ForegroundColor Green
Start-Process $winobjPath

Write-Host "NOTE: Go to **Sessions -> 0**, expand **Dos Devices.** Then click on **EVERY folder** you see in **Dos Devices**." -ForegroundColor Yellow

